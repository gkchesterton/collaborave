
<% if !@track.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @track.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <h4>Upload a Track</h4> 
  <%= form_for @track, html: { multipart: true } do |f| %>
    <%= f.file_field :path %>
    <%= f.label :track_name %>
    <%= f.text_field :track_name %>
    <%= f.hidden_field :project_id, value: @project.id %>
    <%= f.submit "Upload", class: "btn btn-primary" %>
  <% end %>
</div>