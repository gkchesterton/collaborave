<% if !@collaborator.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @collaborator.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <h4>Invite someone to collaborate on this project</h4> 
  <%= form_for @collaborator, html: { multipart: true } do |f| %>
    
    
    
    <%= f.hidden_field :project_id, value: @project.id %>
   
    <%= f.label :email %>
    <%= f.text_field :email %>
    
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>