
<% if !@version.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @version.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <h4>Save your own version</h4> 
  <%= form_for @version, html: { multipart: true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.hidden_field :project_id, value: @project.id %>
   
    <%= f.hidden_field :collaborator_id, value: current_user.id %>
    
    <%= f.hidden_field :settings, :id=>"settings_field" %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>